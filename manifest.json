{
    "manifest_version": 3,
    "name": "Masked",
    "version": "2.0",
    "description": "Hides sensitive information on the screen such as API keys, OAuth2 cids/secrets, passwords, etc.",
    "homepage_url": "https://masked.memelife.ca/",

    "icons": {
        "32": "icons/icons8-mask-32.png",
	    "48": "icons/icons8-mask-48.png",
	    "64": "icons/icons8-mask-64.png"
    },

    "permissions": [    
	    "activeTab",
	    "storage",
        "scripting",
        "clipboardWrite",
        "contextMenus",
        "webRequest"
    ],

    "host_permissions": [
        "https://masked.memelife.ca/*"  
    ],

    "action": {
        "default_icon": "icons/icons8-mask-32.png",
        "default_title": "Masked",
        "default_popup": "popup/popup.html"
    },

    "background": {
        "scripts": [
            "popup/js/handlers.js",
            "popup/js/functions.js",
            "popup/js/background.js"            
        ]
    },

    "content_scripts": [{
        "matches" : ["<all_urls>"],
        "js": [
            "popup/js/jquery-3.7.1.min.js",
            "popup/js/masked.js"
            
        ]
    }]
}

